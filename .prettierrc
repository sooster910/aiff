{
  "printWidth": 80,                 // 한 줄의 최대 길이를 80자로 설정
  "tabWidth": 2,                    // 탭 크기를 2칸으로 설정
  "useTabs": false,                 // 탭 대신 스페이스를 사용
  "semi": false,                     // 문장 끝에 세미콜론을 추가
  "singleQuote": true,              // 문자열을 작은 따옴표로 감싸기
  "trailingComma": "es5",           // 객체나 배열의 마지막 항목 뒤에 쉼표 추가 (ES5 호환)
  "bracketSpacing": true,           // 객체 리터럴에서 괄호 안에 공백 추가
  "jsxBracketSameLine": false,      // JSX에서 `>`를 다음 줄로 이동
  "arrowParens": "always",          // 화살표 함수에서 매개변수가 하나일 때도 괄호를 추가
  "endOfLine": "auto",              // 운영체제에 맞게 자동으로 줄 바꿈 처리
  "htmlWhitespaceSensitivity": "ignore" // HTML에서 공백 민감도를 무시 (대부분의 경우에 사용)
}
